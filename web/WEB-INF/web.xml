        <servlet-name>DeleteFromCartController</servlet-name>
        <url-pattern>/DeleteFromCartController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ConfirmCartController</servlet-name>
        <url-pattern>/ConfirmCartController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetPaymentMethodController</servlet-name>
        <url-pattern>/GetPaymentMethodController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CheckoutCartAndCustomerController</servlet-name>
        <url-pattern>/CheckoutCartAndCustomerController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetCustomerController</servlet-name>
        <url-pattern>/GetCustomerController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchOrderController</servlet-name>
        <url-pattern>/SearchOrderController</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>MainController</welcome-file>
    </welcome-file-list>
    <resource-ref>
        <res-ref-name>ResourceSharing</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
        <res-sharing-scope>Shareable</res-sharing-scope>
    </resource-ref>
</web-app>
